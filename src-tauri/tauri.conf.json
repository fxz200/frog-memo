{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "frog-memo",
  "version": "1.0.0",
  "identifier": "frog-memo",
  "build": {
    "frontendDist": "../dist",
    "devUrl": "http://localhost:5173",
    "beforeDevCommand": "yarn dev",
    "beforeBuildCommand": "yarn build"
  },
  "app": {
    "windows": [
      {
        "title": "frog-memo",
        "width": 800,
        "height": 600,
        "resizable": true,
        "fullscreen": false,
        "alwaysOnTop": true
      }
    ],
    "security": {
      "csp": null
    }
  },

  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
